https://clashstats.download {
    root /app

    tls findamir@gmail.com

    proxy / unix:/tmp/gunicorn.sock {
        transparent
        except /favicon.ico /robots.txt /static
    }

    expires {
        match /static 1y 
        match /clan/.*/short.json$ 1h
    }

    gzip
    log stdout
    errors stdout
}
