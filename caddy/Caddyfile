0.0.0.0, http://web {
    root /app/clashleaders

    proxy / unix:/tmp/gunicorn.sock {
        transparent
        except /favicon.ico /robots.txt /static
    }

    expires {
        match /static 1y
    }

    header /static {
        Cache-Control "public, max-age=31536000"
    }

    header / {
        -Server
    }

    gzip
    log / stdout "[{when}] \"{method} {uri} {proto}\" {status} {size} \"{>User-Agent}\"" {
        except /static
    }
    errors stdout
}

localhost:8000 {
   proxy / unix:/tmp/gunicorn.sock {
        transparent
    }
}
